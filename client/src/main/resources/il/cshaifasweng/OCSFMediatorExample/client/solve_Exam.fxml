               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </RadioButton>
            <RadioButton fx:id="thirdChoice" layoutX="44.0" layoutY="310.0" mnemonicParsing="false" text="choice 3" toggleGroup="$questionChoices">
